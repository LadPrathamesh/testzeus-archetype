<aura:component controller="PaginationController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:attribute name="AccountList" type="Account[]"/>
    <aura:attribute name="recordId" type="string" />
    <aura:attribute name="PageNumber" type="integer" default="1"/>
    <aura:attribute name="TotalPages" type="integer" default="0"/>
    <aura:attribute name="TotalRecords" type="integer" default="0"/>
    <aura:attribute name="RecordStart" type="integer" default="0"/>
    <aura:attribute name="RecordEnd" type="integer" default="0"/>
    <aura:attribute name="hasNext"  type="boolean" default="true" />
    <aura:attribute name="hasPrevious" type="boolean" default="true"/>
    
    <div class="slds-p-around_xxx-small">        
        
        <div class="slds-float_left">
            <ui:inputSelect aura:id="pageSize" label="Display Records Per Page: " change="{!c.onSelectChange}">
                <ui:inputSelectOption text="25" label="25" value="true"/>
                <ui:inputSelectOption text="50" label="50"/>
                <ui:inputSelectOption text="100" label="100"/>
            </ui:inputSelect>
            <br/>
        </div>
        
        <table class="slds-table slds-table_bordered slds-table_cell-buffer">
            <thead>
                <tr class="slds-text-title_caps">
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Account Name">Account Name</div></strong>
                    </th>
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Parent Name">Parent Name</div></strong>
                    </th>
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Billing zip/postal">Billing zip/postal</div></strong>
                    </th>
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Billing City">Billing City</div></strong>
                    </th>
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Billing State">Billing State</div></strong>
                    </th>
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Last Modified Date">Last Modified Date</div></strong>
                    </th>
                    <th scope="col">
                        <strong><div class="slds-truncate" title="Account Source">Account Source</div></strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.AccountList}" var="acc"> 
                    <tr>
                        <th scope="row" data-label="Name">                            
                            <a href="" onclick="{!c.handleClick}">                                
                                <div  id="{!acc.Id}" class="slds-truncate" title="{!acc.Name}">{!acc.Name}</div>
                            </a>                                                                                                                                                                            
                        </th>
                        <th scope="row" data-label="ParentName">
                            <a href="" onclick="{!c.handleClick}">
                                <div id="{!acc.parentId}" class="slds-truncate" title="{!acc.Parent.Name}">{!acc.Parent.Name}</div>
                            </a>                            
                        </th>
                        <th scope="row" data-label="BillingPostalCode">
                            <div class="slds-truncate" title="{!acc.BillingPostalCode}">{!acc.BillingPostalCode}</div>
                        </th>
                        <th scope="row" data-label="BillingCity">
                            <div class="slds-truncate" title="{!acc.BillingCity}">{!acc.BillingCity}</div>
                        </th>
                        <th scope="row" data-label="BillingState">
                            <div class="slds-truncate" title="{!acc.BillingState}">{!acc.BillingState}</div>
                        </th>
                        <th scope="row" data-label="LastModifiedDate">
                            <div class="slds-truncate" title="{!acc.LastModifiedDate}">{!acc.LastModifiedDate}</div>
                        </th>
                        <th scope="row" data-label="AccountSource">
                            <div class="slds-truncate" title="{!acc.AccountSource}">{!acc.AccountSource}</div>
                        </th>
                    </tr>
                </aura:iteration> 
            </tbody>
        </table>
        
        <div class="slds-clearfix">
            <div class="slds-page-header" role="banner">
                <div class="slds-float_right"> 
                    <lightning:button disabled="{!v.hasPrevious}" variant="brand" aura:id="prevPage" label="Prev" onclick="{!c.handlePrev}"  />
                    <lightning:button disabled="{!v.hasNext}" aura:id="nextPage" variant="brand" label="Next" onclick="{!c.handleNext}"  />
                    <!--  <lightning:button disabled="{!v.PageNumber == 1}" variant="brand" aura:id="prevPage" label="Prev" onclick="{!c.handlePrev}" />            
                    <lightning:button disabled="{!v.PageNumber == v.TotalPages}" aura:id="nextPage" variant="brand" label="Next" onclick="{!c.handleNext}"/>-->                    
                </div>
                <p class="slds-page-header__title">{!v.RecordStart}-{!v.RecordEnd} of {!v.TotalRecords} | Page {!v.PageNumber} of {!v.TotalPages}</p>
            </div>
        </div>
    </div>
</aura:component>