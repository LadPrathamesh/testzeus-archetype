<aura:component controller="TransferButtonCmpController" implements="force:appHostable,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="showSpinner" type="Boolean" default="false" />
    <aura:attribute name="Msg" type="String" />
    
     <aura:handler  name="init" value="{!this}" action="{!c.doinit}"/>
    
    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner variant="brand" style="background-color: rgba(0, 0, 0, 0.10);" size="medium" alternativeText="Loading" class="slds-is-fixed" />
    </aura:if>
    
    <!--<ui:message severity="info" closable="false">
	   <div>{!v.Msg}</div>
	</ui:message>-->
 
</aura:component>